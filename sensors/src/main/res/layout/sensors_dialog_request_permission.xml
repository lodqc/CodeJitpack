<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#44000000"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/bg_view"
        app:layout_constraintWidth_max="286dp"
        app:layout_constraintWidth_percent="0.8027"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pop_head"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/sensors_bg_permission_pop"
            app:layout_constraintDimensionRatio = "300:168"
            app:layout_constraintTop_toTopOf="@id/bg_view"
            app:layout_constraintStart_toStartOf="@id/bg_view"
            app:layout_constraintEnd_toEndOf="@id/bg_view"
             />
        <ImageView
            android:id="@+id/b_disagree"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/sensors_ic_close"
            app:layout_constraintTop_toTopOf="@id/bg_view"
            app:layout_constraintEnd_toEndOf="@id/bg_view"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:id="@+id/ll_permission_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:background="@drawable/sensors_bg_ffffff_corner_16_onlybottom"
            app:layout_constraintTop_toBottomOf="@id/pop_head"
            app:layout_constraintStart_toStartOf="@id/bg_view"
            app:layout_constraintEnd_toEndOf="@id/bg_view"
            >
            <TextView
                android:id="@+id/tv_permission_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请求开启以下权限"
                android:textColor="#ff333333"
                android:textSize="16dp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/b_agree"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/sensors_bg_7245ff_corner_8"
                android:textColor="#fff"
                android:textSize="18dp"
                android:text="一键开启权限"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="18dp"
                />
            <LinearLayout
                android:id="@+id/confirm_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="18dp">
                <TextView
                    android:id="@+id/confirm_cancel"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/sensors_bg_10_7245ff_corner_8"
                    android:textColor="#7245FF"
                    android:textSize="18dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/sensors_cancel"
                    />
                <TextView
                    android:id="@+id/go_settings"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/sensors_bg_7245ff_corner_8"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:text="@string/sensors_go_settings"
                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>