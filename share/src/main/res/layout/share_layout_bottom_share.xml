<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/share_shape_share_pop">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="12dp"
        android:padding="4dp"
        android:src="@drawable/share_general_pop_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="分享至"
        android:textColor="#FF0A002A"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_share_part"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="28dp"
        app:layout_constraintLeft_toLeftOf="@id/space"
        app:layout_constraintRight_toRightOf="@id/space"
        app:layout_constraintTop_toBottomOf="@id/space">

        <ImageView
            android:id="@+id/iv_wx"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/share_icon_wechat_share"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_memory"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:includeFontPadding="false"
            android:id="@+id/tv_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="微信"
            android:textColor="#FF646481"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="@id/iv_wx"
            app:layout_constraintRight_toRightOf="@id/iv_wx"
            app:layout_constraintTop_toBottomOf="@id/iv_wx" />

        <ImageView
            android:id="@+id/iv_memory"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/share_icon_memory_share"
            app:layout_constraintLeft_toRightOf="@id/iv_wx"
            app:layout_constraintRight_toLeftOf="@id/iv_qq"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:includeFontPadding="false"
            android:id="@+id/tv_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="朋友圈"
            android:textColor="#FF646481"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="@id/iv_memory"
            app:layout_constraintRight_toRightOf="@id/iv_memory"
            app:layout_constraintTop_toBottomOf="@id/iv_memory" />

        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/share_icon_qq_share"
            app:layout_constraintLeft_toRightOf="@id/iv_memory"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="QQ"
            android:includeFontPadding="false"
            android:textColor="#FF646481"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="@id/iv_qq"
            app:layout_constraintRight_toRightOf="@id/iv_qq"
            app:layout_constraintTop_toBottomOf="@id/iv_qq" />


        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="iv_wx,tv_wx" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="iv_memory,tv_memory" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="iv_qq,tv_qq" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/bg_miao_code"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/share_shape_share_pop_item_bg"
        app:layout_constraintLeft_toLeftOf="@id/space"
        app:layout_constraintRight_toRightOf="@id/space"
        app:layout_constraintTop_toBottomOf="@id/cl_share_part" />

    <TextView
        android:id="@+id/tv_create_miaocode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:includeFontPadding="false"
        android:text="生成喵口令"
        android:textColor="#FF646481"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/bg_miao_code"
        app:layout_constraintLeft_toLeftOf="@id/bg_miao_code"
        app:layout_constraintTop_toTopOf="@id/bg_miao_code" />

    <ImageView
        android:id="@+id/iv_key_miao"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/share_icon_key"
        app:layout_constraintBottom_toBottomOf="@id/bg_miao_code"
        app:layout_constraintRight_toRightOf="@id/bg_miao_code"
        app:layout_constraintTop_toTopOf="@id/bg_miao_code" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_miao"
        android:layout_width="wrap_content"
        app:constraint_referenced_ids="bg_miao_code,tv_create_miaocode,iv_key_miao"
        android:layout_height="wrap_content"/>


    <View
        android:id="@+id/bg_miao_url"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/share_shape_share_pop_item_bg"
        app:layout_constraintLeft_toLeftOf="@id/space"
        app:layout_constraintRight_toRightOf="@id/space"
        app:layout_constraintTop_toBottomOf="@id/bg_miao_code" />

    <TextView
        android:id="@+id/tv_create_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:includeFontPadding="false"
        android:text="复制文本"
        android:textColor="#FF646481"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/bg_miao_url"
        app:layout_constraintLeft_toLeftOf="@id/bg_miao_url"
        app:layout_constraintTop_toTopOf="@id/bg_miao_url" />

    <ImageView
        android:id="@+id/iv_key_url"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/share_icon_link"
        app:layout_constraintBottom_toBottomOf="@id/bg_miao_url"
        app:layout_constraintRight_toRightOf="@id/bg_miao_url"
        app:layout_constraintTop_toTopOf="@id/bg_miao_url" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_copy_link"
        android:layout_width="wrap_content"
        app:constraint_referenced_ids="bg_miao_url,tv_create_url,iv_key_url"
        android:layout_height="wrap_content"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/bg_miao_url" />

</androidx.constraintlayout.widget.ConstraintLayout>